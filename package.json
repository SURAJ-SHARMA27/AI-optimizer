{
  "name": "ai-code-refactor",
  "displayName": "AI Code Refactor",
  "description": "AI-powered refactoring suggestions for JavaScript code.",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.93.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:javascript",
    "onCommand:extension.withAI"
  ],
  "main": "./out/extension.js",
  "contributes": {
     "snippets": [
    {
      "language": "javascript",
      "path": "./src/snippets/nodeBoilerplate.code-snippets"
    },
    {
      "language": "javascript",
      "path": "./src/snippets/mongodbExpress.code-snippets"
    }
  ],
    "commands": [
      {
        "command": "extension.withAI",
        "title": "AI Suggestion"
      }
    ],
    "keybindings": [
      {
        "command": "extension.withAI",
        "key": "shift+alt+i",
        "when": "editorTextFocus"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/estraverse": "^5.1.7",
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "@types/vscode": "^1.93.0",
    "@typescript-eslint/eslint-plugin": "^8.3.0",
    "@typescript-eslint/parser": "^8.3.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.9.1",
    "typescript": "^5.5.4"
  },
  "dependencies": {
    "@google/generative-ai": "^0.20.0",
    "acorn": "^8.12.1",
    "acorn-walk": "^8.3.4",
    "estraverse": "^5.3.0",
    "openai": "^4.65.0"
  }
}
